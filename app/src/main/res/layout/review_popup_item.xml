<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#4000C0FF">


    <TextView
        android:id="@+id/review_popup_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="리뷰 작성자 이름"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar

        android:id="@+id/review_popup_item_star"

        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"

        android:rating="4"


        android:stepSize="0.5"
        android:textColor="#00C0FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_popup_item_name" />

    <Button
        android:id="@+id/review_popup_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#0000C0FF"

        android:text="X"
        app:layout_constraintBottom_toTopOf="@+id/review_popup_item_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_popup_item_date"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="2020-06-22 20:20"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/review_popup_item_star"
        app:layout_constraintEnd_toStartOf="@+id/review_popup_item_delete"
        app:layout_constraintStart_toEndOf="@+id/review_popup_item_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_popup_item_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:gravity="center"

        android:text="여기가 리뷰작성자가 작성한 리뷰의 내용을 담아넣을 텍스트 입니다아아아아.여기가 리뷰작성자가 작성한 리뷰의 내용을 담아넣을 텍스트 입니다아아아아.여기가 리뷰작성자가 작성한 리뷰의 내용을 담아넣을 텍스트 입니다아아아아."
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_popup_item_star" />


</androidx.constraintlayout.widget.ConstraintLayout>